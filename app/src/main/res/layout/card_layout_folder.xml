<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folder_cv_top_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"

    android:layout_marginHorizontal="13dp"
    android:background="@drawable/folder_view1"
    android:elevation="0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:src="@drawable/elevation_forcards">

    <androidx.cardview.widget.CardView
        android:id="@+id/folder_cv_vird"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:elevation="-5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/folder_cv_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="-5dp">

            <ImageView
                android:id="@+id/folder_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toTopOf="@id/txt_nameof_folder"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.388"
                app:srcCompat="@drawable/foldericon_allah_text" />

            <TextView
                android:id="@+id/txt_nameof_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/trartistik"
                android:text="Klasör Adı"
                android:textAlignment="center"
                android:textColor="@color/icons"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/folder_image" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>