<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">
    <item>
        <shape >
            <padding
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"    >
            </padding>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#AA00FF"
                android:endColor="#6200EA" />
            <corners
                android:topLeftRadius="50dp"   >
            </corners>

        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape >
            <padding
                android:top="20dp"
                android:left="17dp"
                android:right="10dp"
                android:bottom="20dp"    >
            </padding>
            <corners
                android:topLeftRadius="50dp"   >
            </corners>

            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>
