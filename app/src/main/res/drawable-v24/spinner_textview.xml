<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:left="-10dp"
        android:right="-10dp"
        android:top="-10dp">
        <shape>
            <solid android:color="@color/accent" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#ffc200"
                android:endColor="#fca10b" />

            <padding
                android:top="17dp"
                android:left="17dp"
                android:right="10dp"
                android:bottom="10dp"    >
            </padding>


            <stroke
                android:width="2dp"
                android:color="#7D7B7B" />
        </shape>
    </item>


</layer-list>